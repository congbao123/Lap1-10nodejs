//- Declaration of a mixin to create a list
mixin list
  ul
    li foo
    li bar
    li baz

//- Use of the 'list' mixin
+list
+list

//- Declaration of a mixin to create a list with dynamic content
mixin pet(name)
  li.pet= name

//- Use of the 'pet' mixin with dynamic content
ul
  +pet('cat')
  +pet('dog')
  +pet('pig')

//- Declaration of a mixin to create an article with optional content
mixin article(title)
  .article
    .article-wrapper
      h1= title
      if block
        block
      else
        p No content provided

//- Use of the 'article' mixin with and without additional content
+article('Hello world')

+article('Hello world')
  p This is my
  p Amazing article

//- Declaration of a mixin to create a link with attributes
mixin link(href, name)
  a(class!=attributes.class, href=href)= name

//- Use of the 'link' mixin with additional attributes
+link('/foo', 'foo')(class="btn")

//- Declaration of a mixin to create a link with attributes using 'with' syntax
mixin link(href, name)
  a(href=href)&attributes(attributes)= name

//- Use of the 'link' mixin with additional attributes using 'with' syntax
+link('/foo', 'foo')(class="btn")

//- Declaration of a mixin that takes an unknown number of arguments
mixin list(id, ...items)
  ul(id=id)
    each item in items
      li= item

//- Use of the 'list' mixin with rest arguments
+list('my-list', 1, 2, 3, 4)
